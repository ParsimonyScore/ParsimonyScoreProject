{% extends "::base.html.twig" %}

{% block onready %}
	<script>
	$( document ).ready(function() {
	    var table = $('#table_messages').DataTable({
			"bSort" : false 	
		});
     
		$('#table_messages tbody').on('click', 'tr', function () {
			var data = table.row( this ).data();
			document.location.href="{{ path('admin_message') }}?id="+this.getAttribute("id").replace("id_","");
		} );
	});	
	</script>
{% endblock %}



{% block body %}

<table class="table table-striped table-bordered table-hover" id="table_messages">
	<thead>
		<tr>
			<th></th>
			<th></th>
			<th>Message</th>
		</tr>
	</thead>
	<tbody style="cursor:pointer">
		{% for msg in messages %}
			<tr id="id_{{ msg.id }}">
				<td>
					{% if not msg.seen %}
						<img src="{{ asset('img/letter_closed.png') }}" width="20px" />
					{% else %}
						<img src="{{ asset('img/letter_open.png') }}" width="20px" />
					{% endif %}
					{{ msg.email }}				
				</td>
				<td>{{ msg.sendDate.format("d/m/Y H:i") }}</td>
				<td>
					{{ msg.message[0:50] }} 
					{% if msg.message|length>50 %}
						...
					{% endif %}
				</td>
			</tr>
		{% endfor %}
	</tbody>
</table>

<!-- div to show file content -->
<div id="fileContent" style="display:none"> 
	<div class="col-md-12 col-sm-12 col-xs-12" >
		<textarea id="fileContent_data" rows="10" class="form-control" target="_blank" readonly>#my_data#</textarea>
		<button type="button" id="fileContent_download" onclick="#download#" class="btn btn-primary" style="margin-top:5px"></button>
		<button type="button" id="fileContent_close" onclick="#close#" class="btn btn-primary" style="margin-top:5px"></button>
	</div>
</div>					
{% endblock %}
