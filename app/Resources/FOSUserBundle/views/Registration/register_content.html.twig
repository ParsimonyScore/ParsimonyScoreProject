{% trans_default_domain 'FOSUserBundle' %}


<div class="x_title">
	<h2 id="addUserForm_title"></h2>
	<div class="clearfix"></div>
 </div>
 <div class="x_content">

	{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 
	'attr': {'class': 'fos_user_registration_register form-horizontal form-label-left', 'id' : 'addUserForm'}}) 
	}}

    	<div class="form-group">
    		<label for="fos_user_registration_form_email" class="control-label col-md-3 col-sm-3 col-xs-12 required" id="addUserForm_email" >Adresse e-mail</label>
    		<div class="col-md-6 col-sm-6 col-xs-12">
    			{{ form_widget(form.email, { 'attr': {'class': 'form-control col-md-7 col-xs-12' } }) }}
    		</div>
    	</div>

    	<div class="form-group">
    		<label for="fos_user_registration_form_username" class="control-label col-md-3 col-sm-3 col-xs-12 required" id="addUserForm_username" >Nom d&#039;utilisateur</label>
    		<div class="col-md-6 col-sm-6 col-xs-12">
    			{{ form_widget(form.username, { 'attr': {'class': 'form-control col-md-7 col-xs-12' } }) }}
    		</div>
    	</div>

	    <div class="ln_solid"></div>
		<div class="form-group">
		    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
		        <button type="submit" id="addUserForm_submit" class="btn btn-success"></button>
		    </div>
		</div>
		{{ form_rest(form) }}
	</form>	
	{{ form_end(form) }}
</div>
